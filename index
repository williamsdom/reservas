                        <div class="form-group">
                            <label for="furniture-select">Seleccionar Mesa</label>
                            <select id="furniture-select" required>
                                <option value="">Selecciona una mesa</option>
                                <!-- Las opciones se cargarán dinámicamente -->
                            </select>
                        </div>
                    </div>
                    <button type="submit" class="btn">
                        <i class="fas fa-plus"></i> Agregar Reservación
                    </button>
                </form>
            </div>
        </div>
    </section>

    <!-- Modal de confirmación para WhatsApp -->
    <div class="confirmation-modal" id="whatsapp-modal">
        <div class="confirmation-content">
            <h3 class="confirmation-title">Enviar Mensaje por WhatsApp</h3>
            <div class="confirmation-message" id="whatsapp-message">
                <!-- El mensaje se generará dinámicamente -->
            </div>
            <div class="confirmation-actions">
                <button class="btn" id="send-whatsapp-btn">
                    <i class="fab fa-whatsapp"></i> Enviar por WhatsApp
                </button>
                <button class="btn" style="background-color: #444;" id="cancel-whatsapp-btn">
                    <i class="fas fa-times"></i> Cancelar
                </button>
            </div>
        </div>
