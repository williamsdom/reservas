    <script>
        // Datos de ejemplo para el sistema
        const furnitureData = [
            {
                id: 1,
                name: "Mesa VIP 1",
                image: "https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60",
                capacity: "4 personas",
                price: "$150",
                status: "available"
            },
            {
                id: 2,
                name: "Mesa VIP 2",
                image: "https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60",
                capacity: "6 personas",
                price: "$200",
                status: "available"
            },
            {
                id: 3,
                name: "Mesa Premium",
                image: "https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60",
                capacity: "8 personas",
                price: "$300",
                status: "available"
            },
            {
                id: 4,
                name: "Sofá Lounge",
                image: "https://images.unsplash.com/photo-1586023492125-27b2c045efd7?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60",
                capacity: "5 personas",
                price: "$250",
                status: "available"
            }
        ];

        // Variables globales
        let currentCalendarMonth = new Date().getMonth();
        let currentCalendarYear = new Date().getFullYear();
        let selectedDate = null;
        let selectedFurniture = null;
        let reservations = JSON.parse(localStorage.getItem('mouk_reservations')) || [];
        let currentReservationForWhatsApp = null;

        // Inicializar la aplicación
        document.addEventListener('DOMContentLoaded', function() {
            initializeCalendar();
            loadFurniture();
            setupEventListeners();
            
            // Cargar reservaciones existentes
            updateReservationsList();
        });

        // Inicializar calendario
        function initializeCalendar() {
            generateCalendar();
        }

        // Generar calendario completo
        function generateCalendar() {
            const calendarContainer = document.getElementById('calendar-container');
            calendarContainer.innerHTML = '';

            // Crear navegación del calendario
            const navigationDiv = document.createElement('div');
            navigationDiv.className = 'calendar-navigation';
            navigationDiv.innerHTML = `
                <button class="calendar-nav-btn" id="prev-month-btn">
                    <i class="fas fa-chevron-left"></i> Mes Anterior
                </button>
                <div class="current-month" id="current-month-display"></div>
                <button class="calendar-nav-btn" id="next-month-btn">
                    Mes Siguiente <i class="fas fa-chevron-right"></i>
                </button>
            `;
            calendarContainer.appendChild(navigationDiv);

            // Crear encabezados de días de la semana
            const headerDiv = document.createElement('div');
            headerDiv.className = 'calendar-header';
            const daysOfWeek = ['Dom', 'Lun', 'Mar', 'Mié', 'Jue', 'Vie', 'Sáb'];
            daysOfWeek.forEach(day => {
                const dayHeader = document.createElement('div');
                dayHeader.className = 'calendar-header-day';
                dayHeader.textContent = day;
                headerDiv.appendChild(dayHeader);
            });
            calendarContainer.appendChild(headerDiv);

            // Crear grid de días
            const calendarGrid = document.createElement('div');
            calendarGrid.className = 'calendar';
            calendarGrid.id = 'calendar-grid';
            calendarContainer.appendChild(calendarGrid);

            // Generar el mes actual
            generateMonthCalendar();

            // Agregar event listeners para navegación
            document.getElementById('prev-month-btn').addEventListener('click', previousMonth);
            document.getElementById('next-month-btn').addEventListener('click', nextMonth);
        }

        // Generar calendario para el mes actual
        function generateMonthCalendar() {
            const calendarGrid = document.getElementById('calendar-grid');
            calendarGrid.innerHTML = '';

            // Actualizar display del mes actual
            document.getElementById('current-month-display').textContent = 
                getMonthName(currentCalendarMonth) + ' ' + currentCalendarYear;

            const firstDay = new Date(currentCalendarYear, currentCalendarMonth, 1);
            const lastDay = new Date(currentCalendarYear, currentCalendarMonth + 1, 0);
            const today = new Date();

            // Días del mes anterior
            const startingDay = firstDay.getDay();
            const prevMonthLastDay = new Date(currentCalendarYear, currentCalendarMonth, 0).getDate();
            
            for (let i = startingDay - 1; i >= 0; i--) {
                const dayElement = document.createElement('div');
                dayElement.className = 'calendar-day other-month';
                dayElement.innerHTML = `
                    <div class="day-number">${prevMonthLastDay - i}</div>
                `;
                calendarGrid.appendChild(dayElement);
            }

            // Días del mes actual
            for (let day = 1; day <= lastDay.getDate(); day++) {
                const date = new Date(currentCalendarYear, currentCalendarMonth, day);
                const dateString = date.toISOString().split('T')[0];
                
                const dayElement = document.createElement('div');
                dayElement.className = 'calendar-day available';
                dayElement.setAttribute('data-date', dateString);
                
                // Verificar si hay reservaciones para esta fecha
                const dateReservations = reservations.filter(r => r.date === dateString);
                let status = dateReservations.length >= furnitureData.length ? 'reserved' : 'available';
                let statusText = status === 'available' ? 'Disponible' : 'Reservado';
                
                dayElement.className = `calendar-day ${status}`;
                
                // Marcar si es hoy
                if (date.toDateString() === today.toDateString()) {
                    dayElement.classList.add('today');
                }
                
                // Marcar si está seleccionado
                if (dateString === selectedDate) {
                    dayElement.classList.add('selected');
                }
                
                dayElement.innerHTML = `
                    <div class="day-number">${day}</div>
                    <div class="day-status">${statusText}</div>
                `;
                
                // Agregar event listener para selección de fecha
                dayElement.addEventListener('click', function() {
                    if (!this.classList.contains('other-month') && !this.classList.contains('reserved')) {
                        selectDate(dateString);
                    }
                });
                
                calendarGrid.appendChild(dayElement);
            }

            // Días del siguiente mes
            const totalCells = 42; // 6 semanas
            const remainingCells = totalCells - (startingDay + lastDay.getDate());
            
            for (let day = 1; day <= remainingCells; day++) {
                const dayElement = document.createElement('div');
                dayElement.className = 'calendar-day other-month';
                dayElement.innerHTML = `
                    <div class="day-number">${day}</div>
                `;
                calendarGrid.appendChild(dayElement);
            }
        }

        // Obtener nombre del mes
        function getMonthName(month) {
            const months = [
                'Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio',
                'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'
            ];
            return months[month];
        }

        // Navegación entre meses
        function previousMonth() {
            currentCalendarMonth--;
            if (currentCalendarMonth < 0) {
                currentCalendarMonth = 11;
                currentCalendarYear--;
            }
            generateMonthCalendar();
        }

        function nextMonth() {
            currentCalendarMonth++;
            if (currentCalendarMonth > 11) {
                currentCalendarMonth = 0;
                currentCalendarYear++;
            }
            generateMonthCalendar();
        }

        // Cargar muebles
        function loadFurniture() {
            const furnitureContainer = document.getElementById('furniture-container');
            furnitureContainer.innerHTML = '';

            furnitureData.forEach(furniture => {
                const furnitureCard = document.createElement('div');
                furnitureCard.className = 'furniture-card';
                furnitureCard.setAttribute('data-id', furniture.id);
                
                // Verificar si el mueble está reservado para la fecha seleccionada
                const isReserved = selectedDate ? 
                    reservations.some(r => r.date === selectedDate && r.furnitureId === furniture.id) : 
                    false;
                
                if (isReserved) {
                    furnitureCard.classList.add('disabled');
                }
                
                furnitureCard.innerHTML = `
                    <img src="${furniture.image}" alt="${furniture.name}" class="furniture-image">
                    <div class="furniture-name">${furniture.name}</div>
                    <div class="furniture-details">${furniture.capacity}</div>
                    <div class="furniture-details">${furniture.price}</div>
                    <div class="furniture-status ${isReserved ? 'status-reserved' : 'status-available'}">
                        ${isReserved ? 'Reservado' : 'Disponible'}
                    </div>
                `;
                
                // Agregar event listener para selección de mueble
                if (!isReserved) {
                    furnitureCard.addEventListener('click', function() {
                        selectFurniture(furniture.id);
                    });
                }
                
                furnitureContainer.appendChild(furnitureCard);
            });
        }

        // Seleccionar fecha
        function selectDate(date) {
            selectedDate = date;
            selectedFurniture = null; // Resetear selección de mueble
            
            // Actualizar calendario
            const allDays = document.querySelectorAll('#calendar-grid .calendar-day');
            allDays.forEach(day => {
                day.classList.remove('selected');
                if (day.getAttribute('data-date') === date) {
                    day.classList.add('selected');
                }
            });
            
            // Recargar muebles para mostrar disponibilidad en la fecha seleccionada
            loadFurniture();
            
            // Ocultar resumen hasta que se seleccione un mueble
            document.getElementById('reservation-summary').style.display = 'none';
        }

        // Seleccionar mueble
        function selectFurniture(furnitureId) {
            if (!selectedDate) {
                alert('Por favor, selecciona una fecha primero.');
                return;
            }
            
            selectedFurniture = furnitureId;
            
            // Actualizar tarjetas de muebles
            const allFurniture = document.querySelectorAll('.furniture-card');
            allFurniture.forEach(card => {
                card.classList.remove('selected');
                if (parseInt(card.getAttribute('data-id')) === furnitureId) {
                    card.classList.add('selected');
                }
            });
            
            // Actualizar resumen
            updateReservationSummary();
        }

        // Actualizar resumen de reserva
        function updateReservationSummary() {
            const summaryElement = document.getElementById('reservation-summary');
            
            if (selectedDate && selectedFurniture) {
                const furniture = furnitureData.find(f => f.id === selectedFurniture);
                const dateObj = new Date(selectedDate);
                const formattedDate = dateObj.toLocaleDateString('es-ES', {
                    day: '2-digit',
                    month: '2-digit',
                    year: 'numeric'
                });
                
                document.getElementById('summary-date').textContent = formattedDate;
                document.getElementById('summary-furniture').textContent = furniture.name;
                document.getElementById('summary-capacity').textContent = furniture.capacity;
                document.getElementById('summary-price').textContent = furniture.price;
                document.getElementById('summary-total').textContent = furniture.price;
                
                summaryElement.style.display = 'block';
            } else {
                summaryElement.style.display = 'none';
            }
        }

        // Configurar event listeners
        function setupEventListeners() {
            // Botón de confirmación de reserva
            document.getElementById('confirm-reservation-btn').addEventListener('click', function() {
                if (selectedDate && selectedFurniture) {
                    confirmReservation();
                } else {
                    alert('Por favor, selecciona una fecha y un mueble para continuar.');
                }
            });
            
            // Botón de cancelar reserva
            document.getElementById('reset-reservation-btn').addEventListener('click', function() {
                resetReservation();
            });
            
            // Enlace al panel administrativo
            document.getElementById('admin-login-link').addEventListener('click', function(e) {
                e.preventDefault();
                showAdminLogin();
            });
            
            // Botón de cerrar sesión
            document.getElementById('logout-btn').addEventListener('click', function() {
                hideAdminPanel();
            });

            // Botones del modal de WhatsApp
            document.getElementById('send-whatsapp-btn').addEventListener('click', sendWhatsAppMessage);
            document.getElementById('cancel-whatsapp-btn').addEventListener('click', function() {
                document.getElementById('whatsapp-modal').style.display = 'none';
            });

            // Formulario para agregar reservación manual
            document.getElementById('add-reservation-form').addEventListener('submit', function(e) {
                e.preventDefault();
                addManualReservation();
            });
        }

        // Confirmar reserva
        function confirmReservation() {
            const furniture = furnitureData.find(f => f.id === selectedFurniture);
            
            // Verificar si ya está reservado
            const existingReservation = reservations.find(r => 
                r.date === selectedDate && r.furnitureId === selectedFurniture
            );
            
            if (existingReservation) {
                alert('Lo sentimos, esta mesa ya ha sido reservada para la fecha seleccionada.');
                return;
            }
            
            // Agregar reserva
            const newReservation = {
                id: Date.now(),
                date: selectedDate,
                furnitureId: selectedFurniture,
                furnitureName: furniture.name,
                price: furniture.price,
                timestamp: new Date().toISOString(),
                source: 'client'
            };
            
            reservations.push(newReservation);
            
            // Guardar en localStorage
            localStorage.setItem('mouk_reservations', JSON.stringify(reservations));
            
            // Mostrar confirmación
            alert(`¡Reserva confirmada!\n\nFecha: ${document.getElementById('summary-date').textContent}\nMesa: ${furniture.name}\nTotal: ${furniture.price}`);
            
            // Resetear selección
            resetReservation();
            
            // Actualizar interfaz
            loadFurniture();
            generateMonthCalendar();
            
            // Actualizar panel administrativo si está visible
            if (document.getElementById('admin-panel').style.display === 'block') {
                updateReservationsList();
                initializeAdminCalendar();
                updateFurnitureSelect();
            }
        }

        // Resetear reserva
        function resetReservation() {
            selectedDate = null;
            selectedFurniture = null;
            
            // Actualizar calendario
            const allDays = document.querySelectorAll('#calendar-grid .calendar-day');
            allDays.forEach(day => {
                day.classList.remove('selected');
            });
            
            // Actualizar muebles
            const allFurniture = document.querySelectorAll('.furniture-card');
            allFurniture.forEach(card => {
                card.classList.remove('selected');
            });
            
            // Recargar muebles para quitar estado "disabled"
            loadFurniture();
            
            // Ocultar resumen
            document.getElementById('reservation-summary').style.display = 'none';
        }

        // Mostrar panel de administración
        function showAdminLogin() {
            const password = prompt('Ingrese la contraseña de administrador:');
            
            // Contraseña simple para demostración
            if (password === 'admin123') {
                document.getElementById('admin-panel').style.display = 'block';
                document.querySelector('.reservation-section').style.display = 'none';
                document.querySelector('.hero').style.display = 'none';
                document.querySelector('footer').style.display = 'none';
                
                // Inicializar panel administrativo
                initializeAdminPanel();
            } else {
                alert('Contraseña incorrecta.');
            }
        }

        // Ocultar panel de administración
        function hideAdminPanel() {
            document.getElementById('admin-panel').style.display = 'none';
            document.querySelector('.reservation-section').style.display = 'block';
            document.querySelector('.hero').style.display = 'block';
            document.querySelector('footer').style.display = 'block';
        }

        // Inicializar panel administrativo
        function initializeAdminPanel() {
            updateReservationsList();
            initializeAdminCalendar();
            updateFurnitureSelect();
            
            // Establecer fecha mínima como hoy
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('reservation-date').min = today;
        }

        // Actualizar lista de reservaciones en el panel administrativo
        function updateReservationsList() {
            const reservationsList = document.getElementById('reservations-list');
            reservationsList.innerHTML = '';

            if (reservations.length === 0) {
                reservationsList.innerHTML = `
                    <div class="no-reservations">
                        <i class="fas fa-calendar-times" style="font-size: 48px; margin-bottom: 15px;"></i>
                        <h3>No hay reservaciones</h3>
                        <p>No se han realizado reservaciones aún.</p>
                    </div>
                `;
                return;
            }

            // Ordenar reservaciones por fecha (más recientes primero)
            const sortedReservations = [...reservations].sort((a, b) => 
                new Date(b.timestamp) - new Date(a.timestamp)
            );

            sortedReservations.forEach(reservation => {
                const reservationElement = document.createElement('div');
                reservationElement.className = 'reservation-item';
                
                const dateObj = new Date(reservation.date);
                const formattedDate = dateObj.toLocaleDateString('es-ES', {
                    weekday: 'long',
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                });

                reservationElement.innerHTML = `
                    <div class="reservation-header">
                        <div class="reservation-id">Reserva #${reservation.id}</div>
                        <div class="reservation-date">${formattedDate}</div>
                    </div>
                    <div class="reservation-details">
                        <div class="reservation-detail">
                            <strong>Mesa:</strong> ${reservation.furnitureName}
                        </div>
                        <div class="reservation-detail">
                            <strong>Precio:</strong> ${reservation.price}
                        </div>
                        <div class="reservation-detail">
                            <strong>Cliente:</strong> ${reservation.clientName || 'No especificado'}
                        </div>
                        <div class="reservation-detail">
                            <strong>Teléfono:</strong> ${reservation.clientPhone || 'No especificado'}
                        </div>
                    </div>
                    <div class="reservation-actions">
                        ${reservation.clientPhone ? `
                            <button class="btn-whatsapp" onclick="openWhatsAppModal(${reservation.id})">
                                <i class="fab fa-whatsapp"></i> Contactar
                            </button>
                        ` : ''}
                        <button class="btn-danger" onclick="deleteReservation(${reservation.id})">
                            <i class="fas fa-trash"></i> Eliminar
                        </button>
                    </div>
                `;
                
                reservationsList.appendChild(reservationElement);
            });
        }

        // Inicializar calendario administrativo
        function initializeAdminCalendar() {
            const adminCalendarContainer = document.getElementById('admin-calendar-container');
            adminCalendarContainer.innerHTML = '';

            // Crear navegación del calendario
            const navigationDiv = document.createElement('div');
            navigationDiv.className = 'calendar-navigation';
            navigationDiv.innerHTML = `
                <button class="calendar-nav-btn" id="admin-prev-month-btn">
                    <i class="fas fa-chevron-left"></i> Mes Anterior
                </button>
                <div class="current-month" id="admin-current-month-display"></div>
                <button class="calendar-nav-btn" id="admin-next-month-btn">
                    Mes Siguiente <i class="fas fa-chevron-right"></i>
                </button>
            `;
            adminCalendarContainer.appendChild(navigationDiv);

            // Crear encabezados de días de la semana
            const headerDiv = document.createElement('div');
            headerDiv.className = 'calendar-header';
            const daysOfWeek = ['Dom', 'Lun', 'Mar', 'Mié', 'Jue', 'Vie', 'Sáb'];
            daysOfWeek.forEach(day => {
                const dayHeader = document.createElement('div');
                dayHeader.className = 'calendar-header-day';
                dayHeader.textContent = day;
                headerDiv.appendChild(dayHeader);
            });
            adminCalendarContainer.appendChild(headerDiv);

            // Crear grid de días
            const calendarGrid = document.createElement('div');
            calendarGrid.className = 'calendar';
            calendarGrid.id = 'admin-calendar-grid';
            adminCalendarContainer.appendChild(calendarGrid);

            // Generar el mes actual
            generateAdminMonthCalendar();

            // Agregar event listeners para navegación
            document.getElementById('admin-prev-month-btn').addEventListener('click', adminPreviousMonth);
            document.getElementById('admin-next-month-btn').addEventListener('click', adminNextMonth);
        }

        // Generar calendario administrativo para el mes actual
        function generateAdminMonthCalendar() {
            const calendarGrid = document.getElementById('admin-calendar-grid');
            calendarGrid.innerHTML = '';

            // Actualizar display del mes actual
            document.getElementById('admin-current-month-display').textContent = 
                getMonthName(currentCalendarMonth) + ' ' + currentCalendarYear;

            const firstDay = new Date(currentCalendarYear, currentCalendarMonth, 1);
            const lastDay = new Date(currentCalendarYear, currentCalendarMonth + 1, 0);
            const today = new Date();

            // Días del mes anterior
            const startingDay = firstDay.getDay();
            const prevMonthLastDay = new Date(currentCalendarYear, currentCalendarMonth, 0).getDate();
            
            for (let i = startingDay - 1; i >= 0; i--) {
                const dayElement = document.createElement('div');
                dayElement.className = 'calendar-day other-month';
                dayElement.innerHTML = `
                    <div class="day-number">${prevMonthLastDay - i}</div>
                `;
                calendarGrid.appendChild(dayElement);
            }

            // Días del mes actual
            for (let day = 1; day <= lastDay.getDate(); day++) {
                const date = new Date(currentCalendarYear, currentCalendarMonth, day);
                const dateString = date.toISOString().split('T')[0];
                
                const dayElement = document.createElement('div');
                dayElement.className = 'calendar-day available';
                dayElement.setAttribute('data-date', dateString);
                
                // Verificar si hay reservaciones para esta fecha
                const dateReservations = reservations.filter(r => r.date === dateString);
                let status = dateReservations.length > 0 ? 'reserved' : 'available';
                let statusText = status === 'available' ? 'Disponible' : `${dateReservations.length} reserva(s)`;
                
                dayElement.className = `calendar-day ${status}`;
                
                // Marcar si es hoy
                if (date.toDateString() === today.toDateString()) {
                    dayElement.classList.add('today');
                }
                
                dayElement.innerHTML = `
                    <div class="day-number">${day}</div>
                    <div class="day-status">${statusText}</div>
                `;
                
                // Agregar event listener para mostrar detalles de reservas
                if (dateReservations.length > 0) {
                    dayElement.style.cursor = 'pointer';
                    dayElement.title = `Click para ver ${dateReservations.length} reserva(s)`;
                    dayElement.addEventListener('click', function() {
                        showReservationsForDate(dateString);
                    });
                }
                
                calendarGrid.appendChild(dayElement);
            }

            // Días del siguiente mes
            const totalCells = 42;
            const remainingCells = totalCells - (startingDay + lastDay.getDate());
            
            for (let day = 1; day <= remainingCells; day++) {
                const dayElement = document.createElement('div');
                dayElement.className = 'calendar-day other-month';
                dayElement.innerHTML = `
                    <div class="day-number">${day}</div>
                `;
                calendarGrid.appendChild(dayElement);
            }
        }

        // Navegación entre meses en el panel administrativo
        function adminPreviousMonth() {
            currentCalendarMonth--;
            if (currentCalendarMonth < 0) {
                currentCalendarMonth = 11;
                currentCalendarYear--;
            }
            generateAdminMonthCalendar();
        }

        function adminNextMonth() {
            currentCalendarMonth++;
            if (currentCalendarMonth > 11) {
                currentCalendarMonth = 0;
                currentCalendarYear++;
            }
            generateAdminMonthCalendar();
        }

        // Mostrar reservaciones para una fecha específica
        function showReservationsForDate(dateString) {
            const dateReservations = reservations.filter(r => r.date === dateString);
            const dateObj = new Date(dateString);
            const formattedDate = dateObj.toLocaleDateString('es-ES', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });

            let message = `Reservaciones para ${formattedDate}:\n\n`;
            
            if (dateReservations.length === 0) {
                message += "No hay reservaciones para esta fecha.";
            } else {
                dateReservations.forEach((reservation, index) => {
                    message += `${index + 1}. ${reservation.furnitureName} - ${reservation.price}\n`;
                    if (reservation.clientName) {
                        message += `   Cliente: ${reservation.clientName}\n`;
                    }
                    if (reservation.clientPhone) {
                        message += `   Teléfono: ${reservation.clientPhone}\n`;
                    }
                    message += '\n';
                });
            }

            alert(message);
        }

        // Actualizar selector de muebles en el formulario administrativo
        function updateFurnitureSelect() {
            const furnitureSelect = document.getElementById('furniture-select');
            furnitureSelect.innerHTML = '<option value="">Selecciona una mesa</option>';
            
            furnitureData.forEach(furniture => {
                const option = document.createElement('option');
                option.value = furniture.id;
                option.textContent = `${furniture.name} - ${furniture.capacity} - ${furniture.price}`;
                furnitureSelect.appendChild(option);
            });
        }

        // Agregar reservación manual desde el panel administrativo
        function addManualReservation() {
            const clientName = document.getElementById('client-name').value;
            const clientPhone = document.getElementById('client-phone').value;
            const reservationDate = document.getElementById('reservation-date').value;
            const furnitureId = parseInt(document.getElementById('furniture-select').value);

            if (!clientName || !clientPhone || !reservationDate || !furnitureId) {
                alert('Por favor, complete todos los campos.');
                return;
            }

            const furniture = furnitureData.find(f => f.id === furnitureId);
            
            // Verificar disponibilidad
            const existingReservation = reservations.find(r => 
                r.date === reservationDate && r.furnitureId === furnitureId
            );

            if (existingReservation) {
                alert('Esta mesa ya está reservada para la fecha seleccionada.');
                return;
            }

            // Crear reservación
            const newReservation = {
                id: Date.now(),
                date: reservationDate,
                furnitureId: furnitureId,
                furnitureName: furniture.name,
                price: furniture.price,
                clientName: clientName,
                clientPhone: clientPhone,
                timestamp: new Date().toISOString(),
                source: 'admin'
            };

            reservations.push(newReservation);
            localStorage.setItem('mouk_reservations', JSON.stringify(reservations));

            // Actualizar interfaz
            updateReservationsList();
            generateAdminMonthCalendar();
            generateMonthCalendar();

            // Limpiar formulario
            document.getElementById('add-reservation-form').reset();

            alert(`Reservación agregada exitosamente para ${clientName}`);
        }

        // Abrir modal de WhatsApp
        function openWhatsAppModal(reservationId) {
            const reservation = reservations.find(r => r.id === reservationId);
            if (!reservation) return;

            currentReservationForWhatsApp = reservation;

            const dateObj = new Date(reservation.date);
            const formattedDate = dateObj.toLocaleDateString('es-ES', {
                weekday: 'long',
                year: 'numeric',
                month: 'long',
                day: 'numeric'
            });

            let message = `Hola ${reservation.clientName || 'cliente'},\n\n`;
            message += `Confirmamos tu reservación en Le Mouk Club:\n\n`;
            message += `📅 Fecha: ${formattedDate}\n`;
            message += `🪑 Mesa: ${reservation.furnitureName}\n`;
            message += `💰 Precio: ${reservation.price}\n`;
            message += `📞 Teléfono de contacto: ${reservation.clientPhone || 'No proporcionado'}\n\n`;
            message += `¡Esperamos verte pronto!\n\n`;
            message += `Saludos,\nEl equipo de Le Mouk Club`;

            document.getElementById('whatsapp-message').textContent = message;
            document.getElementById('whatsapp-modal').style.display = 'flex';
        }

        // Enviar mensaje por WhatsApp
        function sendWhatsAppMessage() {
            if (!currentReservationForWhatsApp) return;

            const phoneNumber = currentReservationForWhatsApp.clientPhone || '1234567890';
            const message = document.getElementById('whatsapp-message').textContent;
            const encodedMessage = encodeURIComponent(message);
            
            window.open(`https://wa.me/${phoneNumber}?text=${encodedMessage}`, '_blank');
            document.getElementById('whatsapp-modal').style.display = 'none';
        }

        // Eliminar reservación
        function deleteReservation(reservationId) {
            if (confirm('¿Está seguro de que desea eliminar esta reservación?')) {
                reservations = reservations.filter(r => r.id !== reservationId);
                localStorage.setItem('mouk_reservations', JSON.stringify(reservations));
                
                updateReservationsList();
                generateAdminMonthCalendar();
                generateMonthCalendar();
                alert('Reservación eliminada exitosamente.');
            }
        }
    </script>
</body>
</html>
